{
  "if": {
    "prefix": "if",
    "body": ["if (${1:}) {", "  ${2:}", "}"],
    "description": "Code snippet for 'if' conditional"
  },
  "if-else": {
    "prefix": "ife",
    "body": ["if (${1:}) {", "  ${2:}", "} else {", "  ${3:}", "}"],
    "description": "Code snippet for 'if-else' conditional block"
  },
  "function": {
    "prefix": "function",
    "body": ["${1:} <- function(${2:}) {", "  ${3:}", "}"],
    "description": "Named function"
  },
  "testthat": {
    "prefix": "test_",
    "body": ["test_that(\"${1:}\", {", "  ${2:}", "})"],
    "description": "Add test"
  },
  "ggplot": {
    "prefix": "ggplot",
    "body": ["ggplot(${1:}aes(${2:})) +", "geom_${3:}"],
    "description": "Start ggplot"
  }
}
