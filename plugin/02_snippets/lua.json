{
  "if-else": {
    "prefix": "ife",
    "body": ["if ${1:true} then", "\t$2", "else", "\t$0", "end"]
  },
  "else": {
    "prefix": "else",
    "body": ["else ${1:true} then", "\t$0"]
  },
  "do": {
    "prefix": "do",
    "body": ["do", "\t$0", "end"],
    "description": "'do' block"
  },
  "function": {
    "prefix": "fun",
    "body": ["function ${1:name}($2)", "\t${3:-- code}", "end"]
  }
}
